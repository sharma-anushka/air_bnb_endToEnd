{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": [
      "src/**/*",
      "app.js",
      "routes/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "typings/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  